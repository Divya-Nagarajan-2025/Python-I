###Simple calculator program

while True:
   choice= input("Enter the operation that has to be performed (add/sub/mul/div/exit) ")
       if choice.lower() == "exit":
          print ("Exit")
          break
       
       x=float(input("Enter the first number "))
       y=float(input("Enter the second number "))

       if choice == "add":
           print(f"the result of addition is {x+y}")
       if choice == "sub":
          print(f"the result of subtraction is {x-y}")
       if choice == "mul":
          print(f"the result of mullication is {x*y}")
      
       def div(x,y):
           if y==0:
              print ("cannot divide by zero")
              return x/y
       if choice == "div":
           print(f"the result of division is {div(x,y)}")
 
